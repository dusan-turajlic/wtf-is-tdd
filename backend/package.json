{
  "name": "wtf-tdd",
  "version": "0.0.1",
  "description": "A simple shopping app",
  "keywords": [],
  "license": "MIT",
  "author": "Dusan Turajlic",
  "files": [
    "dist/*"
  ],
  "main": "dist/src/index.js",
  "scripts": {
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run ts:watch\" \"npm run start:watch\"",
    "watch:debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run ts:watch\" \"npm run start:debug\"",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet",
    "test": "jest --forceExit --coverage --verbose",
    "test:watch": "npm run test --watchAll",
    "build": "npm run clean && npm run ts && npm run lint",
    "start": "node dist/src/index.js",
    "start:watch": "nodemon dist/src/index.js",
    "start:debug": "nodemon --inspect dist/src/index.js",
    "migrate:latest": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "seed:run": "knex seed:run",
    "ts": "tsc",
    "ts:watch": "tsc -w",
    "clean": "rimraf dist coverage"
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "dotenv": "^8.2.0",
    "knex": "^2.4.2",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "koa2-cors": "^2.0.6",
    "pg": "^8.9.0",
    "zod": "^3.21.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.37",
    "@swc/jest": "^0.2.24",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^25.1.3",
    "@types/koa": "^2.11.2",
    "@types/koa__cors": "^3.0.1",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-router": "^7.4.0",
    "@types/node": "^14.18.38",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.0",
    "eslint-plugin-prettier": "^3.1.2",
    "jest": "^29.4.3",
    "nodemon": "^2.0.21",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.3"
  }
}
